        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Center" Width="582" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True" EnableColumnVirtualization="True" ColumnWidth="*" Margin="0,60,0,0" CanUserResizeColumns="False"/>
